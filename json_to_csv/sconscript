Import('env')

Version = "00.01.00"

Sources = [
    'main.cpp',
]

env.AppendUnique( STATICLIBS = [
    env.BoostStaticLibs( [
        'program_options',
    ] )
] )

Objects = env.Compile( Sources )

VersionFile = env.CreateVersion(
        "version.cpp",
        Objects,
        ["json_to_csv"],
        Version
)

env.Build( 'json_to_csv', Objects + VersionFile )
